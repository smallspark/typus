<%

  attachment = attribute.split('_file_name').first

  if @item.attachment_present?(attribute)
    label_text << <<-HTML
 <small>#{link_to _("Remove file"), { :action => 'detach', 
                                      :id => @item, 
                                      :attachment => attachment }, 
                                      :confirm => _("Are you sure?")}</small>
    HTML
  end

%>

<li>
  <%= form.label attribute, label_text %>
  <%= form.file_field attachment, options %>
  <%= typus_preview(@item, attribute) %>
</li>
